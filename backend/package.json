{
  "name": "audiotricks-backend",
  "version": "1.0.0",
  "description": "Backend API for AudioTricks audio processing platform",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "echo '⚠️  Building frontend first...' && cd .. && npm run build && cd backend && tsx watch src/index.ts",
    "dev:backend-only": "tsx watch src/index.ts",
    "build": "tsc && cd .. && npm run build",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run tests/services",
    "test:integration": "vitest run tests/controllers",
    "migrate": "prisma migrate dev",
    "migrate:prod": "prisma migrate deploy",
    "generate": "prisma generate",
    "studio": "prisma studio",
    "seed": "tsx src/utils/seed.ts",
    "make-admin": "tsx src/utils/makeAdmin.ts"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.848.0",
    "@aws-sdk/s3-request-presigner": "^3.848.0",
    "@prisma/client": "^5.9.0",
    "@types/multer": "^2.0.0",
    "@types/node-fetch": "^2.6.12",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "form-data": "^4.0.4",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "node-fetch": "^3.3.2",
    "stripe": "^14.15.0",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.11.5",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vitest/coverage-v8": "^1.6.1",
    "eslint": "^8.56.0",
    "jest": "^30.0.4",
    "prisma": "^5.9.0",
    "puppeteer": "^24.15.0",
    "supertest": "^7.1.3",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.1"
  }
}
