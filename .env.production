# AudioTricks Production Environment Configuration
# Copy this file to .env and fill in your actual values

# ==================== DATABASE ====================
POSTGRES_DB=audiotricks
POSTGRES_USER=audiotricks
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD
POSTGRES_PORT=5432

DATABASE_URL=postgresql://audiotricks:CHANGE_ME_STRONG_PASSWORD@postgres:5432/audiotricks

# ==================== SECURITY ====================
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=CHANGE_ME_RANDOM_64_BYTE_HEX_STRING
ENCRYPTION_KEY=CHANGE_ME_RANDOM_32_BYTE_HEX_STRING

# ==================== REDIS ====================
REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD
REDIS_PORT=6379

# ==================== STORAGE ====================
# DigitalOcean Spaces Configuration
DO_SPACES_KEY=YOUR_DO_SPACES_ACCESS_KEY
DO_SPACES_SECRET=YOUR_DO_SPACES_SECRET_KEY
DO_SPACES_ENDPOINT=https://nyc3.digitaloceanspaces.com
DO_SPACES_BUCKET=audiotricks-storage
DO_SPACES_CDN=https://audiotricks-storage.nyc3.cdn.digitaloceanspaces.com

# ==================== EMAIL ====================
# SendGrid API Key (optional)
SENDGRID_API_KEY=YOUR_SENDGRID_API_KEY

# ==================== APPLICATION ====================
# Server Configuration
NODE_ENV=production
BACKEND_PORT=3001
FRONTEND_PORT=3000

# URLs
FRONTEND_URL=https://audiotricks.com
FRONTEND_API_URL=https://api.audiotricks.com/api

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info

# ==================== MONITORING ====================
# Grafana (optional)
GRAFANA_USER=admin
GRAFANA_PASSWORD=CHANGE_ME_GRAFANA_PASSWORD

# ==================== FRONTEND BUILD ====================
# Vite build environment variables
VITE_API_URL=https://api.audiotricks.com/api
VITE_ENABLE_SECURE_API_KEYS=true
VITE_ENABLE_WORKSPACE_FEATURES=true
VITE_DO_SPACES_ENDPOINT=https://nyc3.digitaloceanspaces.com
VITE_DO_SPACES_BUCKET=audiotricks-storage
VITE_DO_CDN_ENDPOINT=https://audiotricks-storage.nyc3.cdn.digitaloceanspaces.com